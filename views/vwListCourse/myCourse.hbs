    <!--====== TEACHERS PART START ======-->
    
    <section id="teachers-singel" class="pt-20 pb-120 gray-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-8">
                   <div class="teachers-left mt-50">
                        {{#if isTeacher}}
                        <div class="hero">
                            <img src="/public/images/user.png" alt="Teachers" style="width: 150px;height:150px">
                        </div>
                        <div class="name">
                            <h6>{{authUser.f_Fullname}}</h6>
                            <span>Email: {{authUser.f_Email}}</span>
                        </div>
                        
                            <div class="social">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter-square"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus-square"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin-square"></i></a></li>
                            </ul>
                            </div>
                            <div class="description">
                                <p>Gravida nibh vel velit auctor aliquetn sollicitudirem quibibendum auci elit cons equat ipsutis sem nibh id elit. Duis sed odio sit amet nibh vulputate..</p>
                            </div>
                            {{else}}
                             <div class="hero">
                                <img src="/public/images/user.png" alt="Teachers" style="width: 150px;height:150px">
                            </div>
                            <div class="name">
                                <h6>{{authUser.f_Fullname}}</h6>
                            <span>Email: {{authUser.f_Email}}</span>
                            </div>
                        {{/if}}
                        
                    </div> <!-- teachers left -->
                </div>
                <div class="col-lg-8">
                    <div class="teachers-right mt-50">
                        <ul class="nav nav-justified" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a  href="/account/profile" role="tab" >Thông tin</a>
                            </li>
                            <li class="nav-item">
                                <a class="active"  id="courses-tab" data-toggle="tab" href="#courses" role="tab" aria-controls="courses" aria-selected="false">Khóa học của tôi</a>
                            </li>
                            <li class="nav-item">
                                <a   href="/myFavoriteCourse" >Danh sách yêu thích</a>
                            </li>
                            <li class="nav-item">
                                <a  href="/yourCart" role="tab" >Giỏ hàng</a>
                            </li>
                        </ul> <!-- nav -->
                        <div class="tab-content" id="myTabContent">
                            
                            <div class="tab-pane fade show active" id="courses" role="tabpanel" aria-labelledby="courses-tab">
                                <div class="courses-cont pt-20">
                                    <div class="row">
                                        {{#each course }}
                                            <div class="col-md-6" >
                                            <div class="singel-course mt-30">
                                                <div class="thum">
                                                    <div class="image">
                                                        <img src="/public/images/course/{{small_image}}" alt="Course" style="height:140px">
                                                    </div>
                                                    {{#if isFinish}}
                                                        
                                                    {{else}}
                                                    <div class="price" style="right:5px">
                                                        <span style="width: 100px;">Not&nbsp;finish</span>
                                                    </div>
                                                    {{/if}}
                                                </div>
                                                <div class="cont border" style="padding:0px 15px">
                                                    <div class="admin" style="display: block;margin: 0px">
                                                            <ul>
                                                                <li ><a href="#" class="disabled"><i class="fa fa-user" style="margin: 5px"></i><span>{{num_join}}</span></a></li>
                                                            </ul>
                                                        </div>
                                                    <a href="/courses/details?id={{CourseID}}"><h4 style="padding: 0px; font-size:16px">{{title}}</h4></a>
                                                    
                                                    
                                                </div>
                                            </div> <!-- singel course -->
                                        </div>
                                        {{/each}}
                                    

                                        
                                        
                                    </div> <!-- row -->
                                </div> <!-- courses cont -->
                            </div>
                            
                        </div> <!-- tab content -->
                    </div> <!-- teachers right -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

