
{{#section 'css'}}
      <link href="https://vjs.zencdn.net/7.10.2/video-js.css" rel="stylesheet" />
{{/section}}

{{#section 'js'}}
    <script src="https://vjs.zencdn.net/7.10.2/video.min.js"></script>
{{/section}}
    <!--====== PAGE BANNER PART START ======-->
    
    <section id="page-banner" class="pt-30 pb-110 bg_cover" data-overlay="8" style="background-image: url(/public/images/page-banner-3.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{#with this.course}}
                    <div class="page-banner-cont">
                        <h2>{{title}}</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="/courses">Khóa học</a></li>
                                <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
                            </ol>
                        </nav>
                    </div>  <!-- page banner cont -->
                    {{/with}}
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>
    
    <!--====== PAGE BANNER PART ENDS ======-->
   
    <!--====== EVENTS PART START ======-->
    
    <section id="event-page" class="pt-60 pb-120 gray-bg">
        <div class="container" style="display: flex;margin-right:0px 20px;width:100%" >
           <div class="row" style="display: block;width:40%">
               

                <div class="lol">
                    <div class="curriculam-cont" style="padding: 0px;">
                                        
                        <div class="accordion" id="accordionExample">
                            {{#each this.lecture}}
                                
                            
                             <div class="card">
                                <div class="card-header" id="headingOne">
                                    <a href="#" data-toggle="collapse" data-target="#ID{{ID_lect}}" aria-expanded="true" aria-controls="collapseOne" >
                                    <ul>
                                        <li><i class="fa fa-clone"></i></li>
                                        <li><span class="lecture"></span></li>
                                        <li><span class="head">{{title_name}}</span></li>
                                        <li><span class="time d-none d-md-block"><i class="fa fa-check"></i> <span> </span></span></li>
                                    </ul>
                                    </a>
                                                  
                                </div>
                                <div id="ID{{ID_lect}}" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                    <div class="card-body">
                                         <p><i class="fa fa-play-circle" style="margin-right:5px"></i><a href="/myCourse/learn?id={{CourseID}}&video={{ID_lect}}">{{name_video}}</a></p>
                                    </div>
                                </div>                     
                            </div>    
                            {{/each}}                     
                        </div> 

                    </div><!-- curriculam cont -->
                </div>

                   
                  
           </div> <!-- row -->
           {{#unless isNaN}}
           {{#each this.unit}}
           <div class="row" style="display: block;width:60%; margin-left:20px">
               <div class="lol" style="width: 750px;">
                    <h4>{{title_name}}</h4>
                  
                </div>
                <video
                    id="my-video"
                    class="video-js"
                    controls
                    preload="auto"
                    width="750px"
                    height="600px"
                    poster="MY_VIDEO_POSTER.jpg"
                    data-setup="{}">
                    <source src="/public/video/{{file_vd}}" type="video/mp4" />
                    {{!-- <source src="MY_VIDEO.webm" type="video/webm" /> --}}
                    <p class="vjs-no-js">
                    To view this video please enable JavaScript, and consider upgrading to a
                    web browser that
                    <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
                    </p>
                </video>
                <div class="lol" style="width: 750px;">
                    <div class="text-center">
                        <h4>{{name_video}}</h4>
                    </div>
                  
                </div>
                {{!-- <div class="lol" style="width: 750px;">
                    <div class="text-center">
                        <a href="/" class="main-btn" style="background-color: white; border: 1px solid darkblue"><i class="fa fa-angle-left"></i></a>
                    <a href="/" class="main-btn" style="background-color: white; border: 1px solid darkblue"><i class="fa fa-angle-right"></i></a>
                    </div>
                    
                </div> --}}


           </div>
           {{/each}}
           {{/unless}}
           
        </div> <!-- container -->
    </section>
    
    <!--====== EVENTS PART ENDS ======-->
   
  