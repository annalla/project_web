{{#section 'js'}}
<script>
  $('.removeItem').on('click', function () {
    const id = $(this).data('id');
    $('#txtProId').val(id);
    $('#frmRemoveItem').submit();
  });
</script>
{{/section}}

    <!--====== PAGE BANNER PART START ======-->
<form id="frmRemoveItem" action="/yourCart/remove" method="POST">
    <input type="hidden" name="id" id="txtProId">
  </form>
    <section id="page-banner" class="pt-30 pb-130 bg_cover" data-overlay="8" style="background-image: url(/public/images/page-banner-3.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-banner-cont">
                        <h2>Your Profile</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Your profile</li>
                            </ol>
                        </nav>
                    </div> <!-- page banner cont -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== PAGE BANNER PART ENDS ======-->

    <!--====== TEACHERS PART START ======-->
    
    <section id="teachers-singel" class="pt-20 pb-120 gray-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-8">
                    <div class="teachers-left mt-50">
                        {{#if isTeacher}}
                        <div class="hero">
                            <img src="/public/images/teachers/t-1.jpg" alt="Teachers" style="width: 150px;height:150px">
                        </div>
                        <div class="name">
                            <h6>Mark alen</h6>
                            <span>Vice chencelor</span>
                        </div>
                        
                            <div class="social">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter-square"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus-square"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin-square"></i></a></li>
                            </ul>
                            </div>
                            <div class="description">
                                <p>Gravida nibh vel velit auctor aliquetn sollicitudirem quibibendum auci elit cons equat ipsutis sem nibh id elit. Duis sed odio sit amet nibh vulputate..</p>
                            </div>
                            {{else}}
                             <div class="hero">
                                <img src="/public/images/teachers/t-1.jpg" alt="Teachers" style="width: 150px;height:150px">
                            </div>
                            <div class="name">
                                <h6>Mark alen</h6>
                            </div>
                        {{/if}}
                        
                    </div> <!-- teachers left -->
                </div>
                <div class="col-lg-8">
                    <div class="teachers-right mt-50">
                        <ul class="nav nav-justified" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a href="#dashboard" role="tab">Thông tin</a>
                            </li>
                            <li class="nav-item">
                                <a href="/myCourse" role="tab">Khóa học của tôi</a>
                            </li>
                            <li class="nav-item">
                                <a  href="/myFavoriteCourse" role="tab" >Danh sách yêu thích</a>
                            </li>
                            <li class="nav-item">
                                <a class="active"  id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Giỏ hàng</a>
                            </li>
                        </ul> <!-- nav -->
                        
                            <div class="tab-pane fade show active" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                               {{#unless this.empty}}
                                <div class="reviews-cont" style="padding: 5px;">
                                    <ul>
                                        {{#each items}}
                                            
                                       <li>
                                           <div class="singel-reviews"style="padding: 5px;" >
                                                <div class="reviews-author">
                                                    <div class="author-thum">
                                                        <img src="/public/images/course/{{course.small_image}}" alt="Reviews" style="width: 100px;height:80px">
                                                    </div>
                                                    <div class="author-name" style="width: 80%;">
                                                        <h6><a href="/courses/details?id={{course.CourseID}}">{{course.title}} </a></h6>
                                                        <span>Giá:<b>&nbsp; {{amount}}$</b> </span>
                                                    </div>
                                                    <div style="width: 15%;" class="text-right">
                                                        <a data-id="{{course.CourseID}}" class="btn btn-sm btn-outline-danger removeItem " href="javascript:;"  role="button"
                                                        title="Remove Item">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                        </a>
                                                    </div>
                                                        
                                                </div>
                                               
                                            </div> <!-- singel reviews -->
                                       </li>
                                      {{/each}}
                                      <li>
                                          <div style="width: 90%;" class="text-right" >
                                                    <h5 style="padding-top:5px">Total: &nbsp;{{this.sum}}$</h5>    
                                            </div>
                                      </li>
                                    </ul>
                                   
                                    <div class="reviews-form">
                                        <form action="/yourCart/checkout" method="POST" >
                                                <div class="row " >
                                                    
                                                    <div class="col-lg-12">
                                                        <div class="form-singel text-right">
                                                            <button type="submit" class="main-btn" >Mua hàng</button>
                                                        </div>
                                                    </div>
                                                </div> <!-- row -->
                                            </form>
                                    </div>
                                </div> <!-- reviews cont -->
                                {{/unless}}
                            </div>
                        </div> <!-- tab content -->
                    </div> <!-- teachers right -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== EVENTS PART ENDS ======-->

    