{{#section 'js'}}
<script>
  $('.removeItem').on('click', function () {
    const id = $(this).data('id');
    $('#txtProId').val(id);
    $('#frmRemoveItem').submit();
  });
</script>
{{/section}}

    <!--====== PAGE BANNER PART START ======-->
<form id="frmRemoveItem" action="/teacher/remove" method="POST">
    <input type="hidden" name="id" id="txtProId">
  </form>
    <section id="page-banner" class="pt-30 pb-130 bg_cover" data-overlay="8" style="background-image: url(/public/images/page-banner-3.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-banner-cont">
                        <h2>Your Profile</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Your profile</li>
                            </ol>
                        </nav>
                    </div> <!-- page banner cont -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== PAGE BANNER PART ENDS ======-->

    <!--====== TEACHERS PART START ======-->
    
    <section id="teachers-singel" class="pt-20 pb-120 gray-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-8">
                    <div class="teachers-left mt-50">
                        {{#if isTeacher}}
                        <div class="hero">
                            <img src="/public/images/course/teacher/{{infor.image}}" alt="Teachers" style="width: 150px;height:150px">
                        </div>
                        <div class="name">
                            <h6>{{authUser.f_Fullname}}</h6>
                            <span>Email: {{authUser.f_Email}}</span>
                        </div>
                            <div class="description">
                                <p>Nghề nghiệp: {{infor.job}}</p>
                                <p>Giới thiệu: {{{infor.intro}}}</p>
                            </div>
                            {{else}}
                             <div class="hero">
                                <img src="/public/images/user.png" alt="Teachers" style="width: 150px;height:150px">
                            </div>
                            <div class="name">
                                <h6>{{authUser.job}}</h6>
                            <span>Email: {{authUser.intro}}</span>
                            </div>
                        {{/if}}
                        
                    </div> <!-- teachers left -->
                </div>
                <div class="col-lg-8" >
                    <div class="teachers-right mt-50" style="background-color: #fff;">
                        <ul class="nav nav-justified" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a href="/account/profile" role="tab">Thông tin</a>
                            </li>
                            <li class="nav-item">
                                <a href="/teacher/infoTeacher" role="tab">Thêm thông tin giáo viên</a>
                            </li>
                            <li class="nav-item">
                                <a class="active"  id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Khóa học của tôi</a>
                            </li>
                        </ul> <!-- nav -->
                        
                            <div class="tab-pane fade show active" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                               {{#unless this.empty}}
                                <div class="reviews-cont" style="padding: 5px;">
                                    <ul>
                                        {{#each items}}
                                            
                                       <li>
                                           <div class="singel-reviews"style="padding: 5px;" >
                                                <div class="reviews-author">
                                                    <div class="author-thum">
                                                        <img src="/public/images/course/{{small_image}}" alt="Reviews" style="width: 100px;height:80px">
                                                    </div>
                                                    <div class="author-name" style="width: 80%;">
                                                        <h6><a href="/teacher/editCourse?id={{CourseID}}">{{title}} </a></h6>
                                                        <span>Ngày tạo:&nbsp; {{date}} </span>
                                                    </div>
                                                    <div style="width: 15%;" class="text-right">
                                                        <a data-id="{{CourseID}}" class="btn btn-sm btn-outline-danger removeItem " href="javascript:;"  role="button"
                                                        title="Remove Item">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                        </a>
                                                    </div>
                                                        
                                                </div>
                                               
                                            </div> <!-- singel reviews -->
                                       </li>
                                      {{/each}}
                                    </ul>
                                </div> <!-- reviews cont -->
                                {{/unless}}
                            </div>
                        </div> <!-- tab content -->
                    </div> <!-- teachers right -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== EVENTS PART ENDS ======-->

    